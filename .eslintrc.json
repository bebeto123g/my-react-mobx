{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "parser": "babel-eslint",
  "rules": {
//    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "no-debugger": "warn",
    "no-unused-vars": "warn",
    // use bootstrap
    "quotes": "off",
    "no-prototype-builtins": "off",
    "no-undef": "off",
    "no-self-assign": "off",
    // use bootstrap
    "react/prop-types": "warn",
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error",
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  }
}